<Window x:Class="Andrianow_backers_3isp9_18.Windows.MenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Andrianow_backers_3isp9_18.Windows"
        mc:Ignorable="d"
        Title="MenuWindow" Height="500" Width="300">
    <Grid>
        <StackPanel>
            <TextBlock
                x:Name="TBhello"
                Text="Добро пожаловать!"
                FontSize="20"
                Margin="0 0 0 0" 
                FontWeight="Bold" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Center"/>

            <TextBlock
                x:Name="NameClient"
                Text="12345987"
                FontSize="20"
                Margin="0 0 0 0" 
                FontWeight="Bold" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Center"
                />

            <Button x:Name="btProdList" 
                Content="Меню Продуктов"
                Height="35"
                Width="120"
                Margin="0 70 0 0" Click="btProdList_Click"
                />
        </StackPanel>
    </Grid>
</Window>
